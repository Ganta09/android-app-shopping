<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent background -->
            <corners android:radius="4dp"/> <!-- Adjust corner radius -->
        </shape>
    </item>

    <!-- Border -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF"/> <!-- Background color of the ImageView -->
            <corners android:radius="4dp"/> <!-- Adjust corner radius -->
            <stroke
                android:width="1dp"
                android:color="#FF000000"/> <!-- Border color -->
        </shape>
    </item>
</layer-list>
